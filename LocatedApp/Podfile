# Set the platform for the entire project
platform :ios, '15.0'

target 'LocatedApp' do
  # Use static frameworks
  use_frameworks! :linkage => :static

  # Firebase Pods (using version 12.4.0 for OAuth compatibility)
  pod 'Firebase/Auth', '~> 12.4'
  pod 'Firebase/Core', '~> 12.4'
  pod 'Firebase/Firestore', '~> 12.4'
  pod 'Firebase/Functions', '~> 12.4'
  pod 'Firebase/Messaging', '~> 12.4'
  
  # Google Sign-In
  pod 'GoogleSignIn', '~> 9.0'
  
  # RevenueCat for subscriptions
  pod 'RevenueCat', '~> 5.0'

  # Test Targets (optional but good to keep)
  target 'LocatedAppTests' do
    inherit! :search_paths
  end

  target 'LocatedAppUITests' do
    inherit! :search_paths
  end
end

# This script runs after pods are installed to fix build setting conflicts.
post_install do |installer|
  installer.pods_project.targets.each do |target|
    
    # FIX #1: The original fix for rsync build errors with gRPC.
    if target.name == 'gRPC-Core'
      target.build_configurations.each do |config|
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)']
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] << 'GRPC_CFSTREAM=0'
      end
    end

    # FIX #2: NEW fix for the BoringSSL-GRPC '-G' error.
    # This forces every pod to respect the project's iOS 15.0 deployment target.
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
    
  end
end

